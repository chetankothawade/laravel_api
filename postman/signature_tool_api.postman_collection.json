            },
            "url": "{{base_url}}/login"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "let jsonData = {};",
                  "try { jsonData = pm.response.json(); } catch (e) {}",
                  "if (jsonData?.data?.token) {",
                  "  pm.collectionVariables.set('token', jsonData.data.token);",
                  "}",
                  "if (jsonData?.data?.user?.uuid) {",
                  "  pm.collectionVariables.set('user_uuid', jsonData.data.user.uuid);",
                  "}"
                ]
              }
            }
